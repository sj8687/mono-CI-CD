generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(uuid())
  username String
  password String
  todos    Todo[]
}

model Todo {
  id     String  @id @default(uuid())
  task   String
  done   Boolean @default(false)
  userId String
  user   user    @relation(fields: [userId], references: [id])
}
